<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.social.SocialUserProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/shape_settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/sm_primary_dark" />
            <TextView
                android:id="@+id/fragment_social_profile_user_full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="saeidmoradi"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_large"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_setting"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_social_profile_user_full_name"
                >
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_user"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_social_profile_post_count_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/profile_image_layout"
                app:layout_constraintTop_toTopOf="@id/profile_image_layout">
                <TextView
                    android:id="@+id/fragment_social_profile_post_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="0\nPosts"
                    android:textColor="@color/sm_primary_dark"
                    android:textSize="@dimen/sm_text_size_default"
                    android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_social_profile_following_count_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/fragment_social_profile_post_count_layout"
                app:layout_constraintTop_toTopOf="@id/profile_image_layout">
                <TextView
                    android:id="@+id/fragment_social_profile_following_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0\nFollowings"
                    android:textAlignment="center"
                    android:textColor="@color/sm_primary_dark"
                    android:textSize="@dimen/sm_text_size_default"
                    android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fragment_social_profile_follower_count_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/fragment_social_profile_following_count_layout"
                app:layout_constraintTop_toTopOf="@id/profile_image_layout">
                <TextView
                    android:id="@+id/fragment_social_profile_follower_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="0\nFollowers"
                    android:textColor="@color/sm_primary_dark"
                    android:textSize="@dimen/sm_text_size_default"
                    android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txt_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_image_layout"
                android:text=""
                android:textColor="@color/sm_primary_dark"
                android:layout_margin="20dp"
                android:textSize="@dimen/sm_text_size_default"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_button_text_size_default"
                android:layout_margin="20dp"
                app:background="@drawable/shape_bg_btnsubmit"
                app:backgroundTint="@color/sm_primary_light"
                app:icon="@drawable/ic_edit"
                app:iconSize="@dimen/sm_button_icon_size_default"
                app:iconTint="@color/sm_primary_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_bio" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/btn_follow"
                android:layout_marginTop="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/social_post_list_recycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:viewBindingType="androidx.recyclerview.widget.RecyclerView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>