<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout_medical_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fadingEdgeLength="1dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_card_item_v2"
            android:padding="20dp">

            <TextView
                android:id="@+id/card_item_social_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="is simply dummy text of the printing"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_large"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/card_item_social_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_screen"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_item_social_title"
                />
            <TextView
                android:id="@+id/card_item_social_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="2dp"
                android:text="is including versions of Lorem Ipsum ...."
                android:textColor="@color/sm_dark_medium"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_item_social_image" />
            <ImageView
                android:id="@+id/card_item_social_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_heart"
                app:layout_constraintTop_toBottomOf="@id/card_item_social_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/sm_primary_dark" />
            <ImageView
                android:id="@+id/card_item_social_like_filled"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_heart_filled"
                app:layout_constraintTop_toBottomOf="@id/card_item_social_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/sm_danger_dark" />
            <ImageView
                android:id="@+id/card_item_social_comment"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_comment"
                app:layout_constraintTop_toBottomOf="@id/card_item_social_description"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/sm_primary_dark" />

            <TextView
                android:id="@+id/card_item_social_comment_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:justificationMode="inter_word"
                android:padding="2dp"
                android:text="13"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintStart_toEndOf="@+id/card_item_social_comment"
                app:layout_constraintTop_toTopOf="@+id/card_item_social_comment" />
            <TextView
                android:id="@+id/card_item_social_like_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:justificationMode="inter_word"
                android:padding="2dp"
                android:text="liked by 5 people"
                android:textColor="@color/sm_primary_dark"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/card_item_social_comment"
                app:layout_constraintTop_toBottomOf="@+id/card_item_social_comment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>