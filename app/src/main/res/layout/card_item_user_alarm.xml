<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_layout_medical_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fadingEdgeLength="1dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_card_item_v2"
            android:padding="20dp">

            <ImageView
                android:id="@+id/card_item_user_alarm_days_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/sm_primary_dark" />

            <TextView
                android:id="@+id/card_item_user_alarm_days_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:text="Tu,Wed"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintEnd_toStartOf="@+id/card_item_user_alarm_days_icon"
                app:layout_constraintTop_toTopOf="@+id/card_item_user_alarm_days_icon" />

            <TextView
                android:id="@+id/card_item_user_alarm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="my habit is music"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_large"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_item_user_alarm_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:justificationMode="inter_word"
                android:padding="2dp"
                android:text="text description"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_item_user_alarm_title" />

            <ImageView
                android:id="@+id/card_item_user_alarm_remind_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_marginStart="30dp"

                android:src="@drawable/ic_medical_alarm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_item_user_alarm_desc"
                app:tint="@color/sm_primary_dark" />


            <TextView
                android:id="@+id/card_item_habit_remind_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="  20:30"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintLeft_toRightOf="@+id/card_item_user_alarm_remind_icon"
                app:layout_constraintTop_toTopOf="@+id/card_item_user_alarm_remind_icon" />

            <ImageView
                android:id="@+id/card_item_user_alarm_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/sm_primary_dark" />

            <TextView
                android:id="@+id/card_item_user_alarm_start_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="2dp"
                android:text="16:30 - 18:00"
                android:textColor="@color/sm_primary_dark"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_item_user_alarm_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>