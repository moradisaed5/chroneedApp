<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_layout_paired_device_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fadingEdgeLength="1dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_card_item_v1"
            android:padding="10dp">

            <TextView
                android:id="@+id/card_item_bluetooth_paired_device_nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="Name : "
                android:textColor="@color/sm_dark_dark"
                android:textSize="@dimen/sm_text_size_default"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_item_bluetooth_paired_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"

                android:text="name"
                android:textColor="@color/sm_dark_dark"
                android:textSize="@dimen/sm_text_size_default"

                app:layout_constraintStart_toEndOf="@+id/card_item_bluetooth_paired_device_nametext"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_item_bluetooth_paired_device_addresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="Address : "
                android:textColor="@color/sm_dark_dark"
                android:textSize="@dimen/sm_text_size_default"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_item_bluetooth_paired_device_name" />

            <TextView
                android:id="@+id/card_item_bluetooth_paired_device_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="2dp"
                android:text="address"
                android:textColor="@color/sm_dark_dark"
                android:textSize="@dimen/sm_text_size_default"
                app:layout_constraintStart_toEndOf="@+id/card_item_bluetooth_paired_device_addresstext"
                app:layout_constraintTop_toBottomOf="@+id/card_item_bluetooth_paired_device_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>